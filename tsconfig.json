{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "strict": false,
    "outDir": ".script",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ]
}