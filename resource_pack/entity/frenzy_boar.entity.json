{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "sao:frenzy_boar",
      "materials": {
        "default": "hoglin"
      },
      "textures": {
        "default": "textures/entity/frenzy_boar",
        "sao_health_bar": "textures/ui/health_bar",
        "sao_cursor": "textures/ui/cursor_red"
      },
      "geometry": {
        "default": "geometry.hoglin",
        "sao_health_bar": "geometry.sao_health_bar",
        "sao_cursor": "geometry.sao_cursor"
      },
      "spawn_egg": {
        "texture": "spawn_egg_frenzy_boar"
      },
      "scripts": {
        "pre_animation": [
          "v.tcos_right_side = (Math.cos(query.modified_distance_moved * 38.17) * query.modified_move_speed / v.gliding_speed_value) * 57.3;",
          "v.tcos_left_side = -v.tcos_right_side;",
          "v.attack_head_rot =  Math.sin(v.attack_time * 180.0) * -37.3;",
          // is_looking_at
          "v.looking_at_center_offset = .5;", // (+ is upward, - is downward)
          "v.looking_at_horizontal_angle = 120;",
          "v.looking_at_vertical_angle = 80;",
          "v.looking_at_entity = Math.abs(Math.abs(q.rotation_to_camera(1) - q.camera_rotation(1)) - 180) < (v.looking_at_horizontal_angle / q.distance_from_camera) && Math.abs(-Math.atan2(-q.distance_from_camera * Math.sin(q.rotation_to_camera(0)) - v.looking_at_center_offset, q.distance_from_camera * Math.cos(q.rotation_to_camera(0))) + q.camera_rotation(0)) < (v.looking_at_vertical_angle / q.distance_from_camera);",
          // show_health_bar
          "v.sao_health=q.is_alive&&(q.property('sao:health_bar') || v.looking_at_entity)&&q.distance_from_camera<=10 ? q.health/q.max_health : 0;"
        ],
        "animate": [
          "look_at_target",
          "walk",
          "attack",
          "sao_cursor_rotate",
          {
            "sao_death_explosion": "!q.is_alive"
          }
        ]
      },
      "animations": {
        "walk": "animation.hoglin.walk",
        "look_at_target": "animation.hoglin.look_at_target",
        "attack": "animation.hoglin.attack",
        "sao_cursor_rotate": "animation.sao.cursor_rotate",
        "sao_death_explosion": "animation.sao.death_explosion"
      },
      "sound_effects": {
        "sao_death_explosion": "entity.sao.death_explosion"
      },
      "render_controllers": [
        "controller.render.hoglin",
        "controller.render.sao_health_bar",
        "controller.render.sao_cursor"
      ]
    }
  }
}