{
  "namespace": "modal_status",
  "container": {
    "type": "panel",
    "controls": [
      {
        "scrolling_panel@common.scrolling_panel": {
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "size": [
            "100%",
            "100%"
          ],
          "$show_background": false,
          "$scrolling_content": "modal_status.scrolling_content",
          "$scroll_size": [
            5,
            "100% - 4px"
          ],
          "$scrolling_pane_size": [
            "100% - 4px",
            "100% - 2px"
          ],
          "$scrolling_pane_offset": [
            2,
            0
          ],
          "$scroll_bar_right_padding_size": [
            0,
            0
          ]
        }
      }
    ]
  },
  "scrolling_content": {
    "type": "stack_panel",
    "size": [
      "100% - 4px",
      "100%c"
    ],
    "layer": 1,
    "controls": [
      {
        "description_panel": {
          "type": "panel",
          "size": [
            "100%",
            "100%c"
          ],
          "controls": [
            {
              "description_label": {
                "type": "label",
                "size": [
                  "100%",
                  "default"
                ],
                "text": "#form_text",
                "color": "black"
              }
            }
          ]
        }
      },
      {
        "buttons_panel": {
          "type": "stack_panel",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "collection_name": "form_buttons",
          "controls": [
            {
              "button_1@modal_status.up_button": {
                "collection_index": 10
              }
            }
          ]
        }
      }
      // {
      //   "image_test": {
      //     "type": "image",
      //     "texture": "textures/icons/plus",
      //     "size": [
      //       32,
      //       32
      //     ]
      //   }
      // }
    ]
  },
  "up_button@common_buttons.light_text_button": {
    "size": [
      14,
      14
    ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$pressed_button_name": "button.form_button_click",
    "$button_type_panel": "modal_status.up_button_label",
    "$border_visible": false,
    "$default_button_texture": "textures/icons/plus",
    "$hover_button_texture": "textures/icons/plus",
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "form_buttons"
      },
      {
        "binding_name": "#form_button_text",
        "binding_type": "collection",
        "binding_collection_name": "form_buttons"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not (#form_button_text = ''))",
        "target_property_name": "#visible"
      }
    ]
  },
  "up_button_label": {
    "type": "label",
    "offset": [
      14,
      0
    ],
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "text": "#form_button_text",
    "color": "black",
    "bindings": [
      {
        "binding_name": "#form_button_text",
        "binding_type": "collection",
        "binding_collection_name": "form_buttons"
      }
    ]
  }
}