{
  "third_party_server_screen@common.base_screen": {
    "$screen_content": "server_form.main_screen_content",
    "force_render_below": true,
    "low_frequency_rendering": true,
    "render_only_when_topmost": false,
    "render_game_behind": true,
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      }
    ]
  },
  "stk_background_blue": {
    "type": "image",
    "texture": "$background_texture",
    "$background_texture|default": "textures/backgrounds/blue"
  },
  "action_form@server_form.long_form": {
    "size": [
      275,
      175
    ],
    "$child_control": "modal_status.container",
    "$custom_background": "server_form.stk_background_blue",
    "bindings": [
      {
        "binding_name": "#title_text" // We define the title text inside the parent so we don't need to call it everytime we use it
      },
      {
        "binding_type": "view",
        "source_property_name": "(#title_text = 'stk.ui.main')",
        "target_property_name": "#visible"
      }
    ]
  },
  // long_form hidden
  "long_form": {
    "modifications": [
      {
        "array_name": "bindings",
        "operation": "insert_back",
        "value": [
          {
            "binding_name": "#title_text"
          },
          {
            "binding_type": "view",
            "source_property_name": "((#title_text - 'stk.ui') = #title_text)",
            "target_property_name": "#visible"
          }
        ]
      }
    ]
  },
  "main_screen_content": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "stk_server_form_factory": {
              "type": "panel",
              "factory": {
                "name": "server_form_factory",
                "control_ids": {
                  "long_form": "@server_form.action_form"
                }
              }
            }
          }
        ]
      }
    ]
  }
}